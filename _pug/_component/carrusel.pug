.carrusel
	style( type="text/css" ).
		.carrusel {
			width: 100%;
		}
		.carrusel + .contenido {
			margin-top: 20px;
		}
		.carrusel > a {
			width: 100%;
			cursor: pointer;
		}
		.carrusel > a > img {
			width: 100%;
		}
	
	//- a.jordanmars270( title="Nike - Jordan Mars 270" )
