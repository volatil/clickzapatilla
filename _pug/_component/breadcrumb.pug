div#breadcrumb
	link(rel="stylesheet" href="css/breadcrumb.min.css")
	
	script( type="text/javascript" ).
		$( document ).ready(function(){
			setTimeout(function(){
				var data = {
					"marca" : $( ".getDetalle > div > p.marca" ).html() ,
					"modelo" : $( ".getDetalle > div > p.modelo" ).html() ,
				};
				$( $( "#breadcrumb > ul > li" )[2] ).html( data.modelo );
				
				if( data.marca.length >= 2 ) {
					$( "div#breadcrumb" ).append( `
						<ul>
							<li>
								<a href="/" title="Inicio">
									<img class="lazyload" data-src="/imagenes/detalle/home.svg" alt="Inicio" />
									Inicio
								</a>
							</li>
							<li>
								<a href="/marca.html?marca=${data.marca}" title="${capitalize(data.marca)}">${capitalize(data.marca)}</a>
							</li>
							<li>${capitalize(data.modelo)}</li>
						</ul>
					` );
				} else {
					$( "div#breadcrumb" ).hide();
				}
			},1000);
		});